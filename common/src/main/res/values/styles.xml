<resources>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--无边框-->
        <item name="android:windowFrame">@null</item>
        <!--提示框是否是浮动的-->
        <item name="android:windowIsFloating">true</item>
        <!--控件启动前的背景色-->
        <item name="android:windowContentOverlay">@null</item>
        <!--提示框的背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--软键盘设置-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 背景缓存色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否充许对话框的背景变暗。为true则充许变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 透明Dialog -->
    <style name="NoDimDialog" parent="BaseDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 顶部进顶部出 -->
    <style name="animation_top_in_top_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_out</item>
    </style>
</resources>
